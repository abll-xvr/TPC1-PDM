<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6695E"
        android:text="Conversor"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione para que sistema quer converter:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/grupoRadio1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rdDecimal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decimal"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdRomano2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Romano"
            android:textColor="#000000"
            android:textSize="18sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insira o nÃºmero a converter:"
        android:textColor="#000000"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtNumero2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btConverter2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Converter"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#F6695E" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor convertido:"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtValorConvertido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btIrConversor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ir para o Calculadora"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#F6695E" />

</LinearLayout>